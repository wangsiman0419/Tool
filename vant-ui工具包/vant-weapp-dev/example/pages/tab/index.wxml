<demo-block title="基础用法">
  <van-tabs active="{{ 1 }}" bind:change="onChange">
    <van-tab
      wx:for="1234"
      wx:key="index"
      title="{{ '标签' + item }}"
    >
      <view class="content">
        {{ '内容' + item }}
      </view>
    </van-tab>
  </van-tabs>
</demo-block>

